{
  "compilerOptions": {
    "baseUrl": "../../../../../",
    "outDir": "./build",
    "allowJs": true,
    "target": "ES2015",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "scripthost",
      "es2015.proxy"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./node_modules/"
  ],
  "include": [
    "**/*.ts"
  ]
}
