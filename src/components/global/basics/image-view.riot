
<image-view>
    <img class="ImageView" onclick="{onClick}"/>
    <style>
    </style>
    <script>
      import StdComp from 'Framework/app-core/StdComp'
      const sc =  Object.assign({
        isAlignable: true,

        preStdOnMounted() {
            let img = this.$('img')
            if(img) {
              let src = (this.com.evaluateBindExpression(props.src)?.value) || ''
              img.src = this.com.baseFromAssets(src)
              img.style.width = this.props.width;
              img.style.height = this.props.height;
            }
        },

        onClick(e) {
          console.log('onClick pressed')
          // call via binding context
          this.cm.getApp().callEventHandler('action', e)
        }

      }, StdComp)
      export default sc
    </script>
</image-view>
